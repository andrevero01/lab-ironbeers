<div class='random-container'>
  <img src='{{random.image_url}}' alt='{{random.name}}' class='random-beer' />
  <div class='random-properties'>
    <h2>{{random.name}}</h2>
    <p>{{random.tagline}}</p>
    <p>{{random.description}}</p>
    <p><b>Food pairing</b></p>
    {{#each random.food_pairing}}
      <li>{{this}}</li>
    {{/each}}
    {{!-- <p>{{random.food_pairing}}</p> --}}
    <p><b>Brewer tips: </b>{{random.brewers_tips}}</p>
  </div>
</div>